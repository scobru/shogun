{
  "extends": "@tsconfig/node16-strictest/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "checkJs": false,
    "typeRoots": ["./node_modules/@types"],
    "noEmit": false,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "tests/**/*"]
}
